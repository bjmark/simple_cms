<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) if current_user.role == 'admin' %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete if current_user.role == 'admin' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path if current_user.role == 'admin' %>
